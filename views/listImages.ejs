<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>List Images</title>
</head>

<body>
  <h1 id="h1">Images</h1>
  <button id="btn">back</button>

  <div id="container"></div>

  <script>
    const port = JSON.parse('<%- JSON.stringify(PORT) %>');
    const baseUrl = `http://localhost:${port}`;
    const dir = JSON.parse('<%- JSON.stringify(dir) %>');
    const images = JSON.parse('<%- JSON.stringify(images) %>');
    const container = document.getElementById("container");

    document.getElementById("h1").textContent = dir;
    document.getElementById("btn").addEventListener("click", () => {
      document.location.href = baseUrl;
    })

    container.style.cssText = `
      margin-top:20px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 200px));
      place-content:center;
      grid-auto-rows: 150px;
      gap: 10px;
    `
    const fragment = document.createDocumentFragment();
    images.forEach((image, index) => {
      const div = document.createElement("div");
      const img = document.createElement("img");
      img.src = `/${dir}/${images[index]}`;
      img.title = images[index];
      const small = document.createElement("small");
      small.textContent = image;
      small.title = image;
      small.style.cssText = `
        position:absolute;
        inset:80% 0 0 0;
        width:100%;
        background:#0009;
        color:#fff;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        z-index:1;
        padding:5px;
      `
      div.addEventListener("click", () => {
        const baseUrl = `http://localhost:${port}/api/${dir.slice(0,-1)}/${index+1}`;
        document.location.href = baseUrl;
      });
      div.style.cssText = `
        position:relative;
        display:flex;
        align-items:center;
        flex-direction:column;
        cursor:pointer;
        justify-content:center;
        border:1px solid #000;
        overflow:hidden;
        `;
      img.style.cssText = `
        max-width:100%;
        display:flex;
        `;
      div.appendChild(small);
      div.appendChild(img);
      fragment.appendChild(div);
    });

    container.appendChild(fragment);
  </script>
</body>

</html>